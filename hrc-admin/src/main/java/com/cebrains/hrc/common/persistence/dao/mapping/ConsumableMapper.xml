<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cebrains.hrc.common.persistence.dao.ConsumableMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cebrains.hrc.common.persistence.model.Consumable">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="number" property="number" />
        <result column="specification" property="specification" />
        <result column="price" property="price" />
        <result column="measure_unit" property="measureUnit" />
        <result column="manufacturer" property="manufacturer" />
        <result column="department" property="department" />
        <result column="amount" property="amount" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, number, specification, price, measure_unit AS measureUnit, manufacturer, amount, department, create_time AS createTime
    </sql>

    <select id="selectByDeptId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from consumable as a where (#{deptid} = 0 || a.department = #{deptid}) order by a.create_time;
    </select>

</mapper>
