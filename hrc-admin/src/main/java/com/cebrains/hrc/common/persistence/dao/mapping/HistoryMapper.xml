    <sql id="Base_Column_List">
        id, nickname, phone, real_name AS realName, gender,wechat,wechat_qr_code AS wechatQRCode, birthday, id_card AS idCard, avatar, height, weight, blood_type AS bloodType, chest_circumference AS chestCircumference, waist_circumference AS waistCircumference, hip_circumference AS hipCircumference, occupation, email, address, mailing_address AS mailingAddress, marital_status AS maritalStatus, have_children AS haveChildren, children_gender AS childrenGender, children_birthday AS childrenBirthday, family_member AS familyMember, favorite_colors AS favoriteColors, favorite_clothing_style AS favoriteClothingStyle, favorite_food AS favoriteFood, favorite_drinking AS favoriteDrinking, favorite_music AS favoriteMusic, hobby, preferred_nursing_time AS preferredNursingTime, preferred_contact_method AS preferredContactMethod, preferred_contact_time AS preferredContactTime, customer_service_memo AS customerServiceMemo, genetic_disease_history AS geneticDiseaseHistory, past_disease_history AS pastDiseaseHistory, past_treat_history AS pastTreatHistory, past_medicine_history AS pastMedicineHistory, drug_allergy_history AS drugAllergyHistory, alcohol_allergy AS alcoholAllergy, existing_symptom AS existingSymptom, clinic, introducer, created_by AS createdBy, create_time AS createTime, flag, age
    </sql>

    <select id="selectList" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select s.fullname as clinicName,u.`name` as creatorName,h.* from history h LEFT JOIN sys_dept s on s.id = h.clinic LEFT JOIN sys_user u on u.id = h.created_by where h.uid = #{id}
    </select>

